<div class="image-background-general">

<div class="container">
  <div class="monkey-form">
  <div class="row justify-content-center">
  <div class="col-4 p-3 m-3 bg-light">

  <h2>Add a new monkey</h2>

  <%= simple_form_for @monkey do |f| %>
    <%= f.input :name%>
    <%= f.input :speciality, collection: Monkey::SPECIALITY%> <!-- ajouter liste dÃ©roulante -->
    <%= f.input :description %>
    <%= f.input :price%>
    <%= f.input :picture%>
    <%= f.input :picture_cache, as: :hidden %>
    <br>

    <%= f.button :submit, "Add a Monkey!", class: "btn btn-success btn-lg btn-block"%>
  <% end %>
  </div>
  </div>
